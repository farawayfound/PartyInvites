@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-sidth" />
    <title> Thanks </title>
</head>

<body>
    <div>
        <h1> Thank You @Model.Name! </h1>

        @if (Model.WillAttend == true)
        {
            @: It's great that you're coming. The drinks are already in the fridge!
        }
        else if (Model.WillAttend == false)
        {
            @: Sorry that you can't make it. Thanks for letting us know.
        }
        else
        { 
            @: It's going to be a great party! Hope to see you there
        }

        Click <a asp-action="ListResponses"> here </a> to see who's coming.
    </div>
</body>
</html>
